@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<gummi_bear_kingdom.Models.Product>

<h2>Gummi Bear Kingdom</h2>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name)</h4>
<ul>
    @foreach (var listProduct in Model)
    {
        <li>@Html.DisplayFor(modelProduct => listProduct.Name) | @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId }) | @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId })</li>
    }
</ul>
<p>@Html.ActionLink("Add new product", "Create")</p>
